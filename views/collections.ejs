<!DOCTYPE html>
<head>
  <title>MyMovieBox</title>
  <link rel="stylesheet" href="/shared-styles.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>My Collections</h1>
      <h2>Organize and manage your movie collections</h2>
    </div>

    <nav class="nav">
      <a href="/" class="nav-link">‚Üê Home</a>
      <a href="/movies" class="nav-link">Browse Movies</a>
      <a href="/collections/new" class="nav-link">Create New Collection</a>
    </nav>

    <% if(collections.length === 0) { %>
      <div class="empty-state">
        <h2>No collections yet</h2>
        <p>Start by creating your first collection to organize your movies!</p>
        <a href="/collections/new" class="btn btn-primary">Create Collection</a>
      </div>
    <% } else { %>
      <div class="grid">
        <% collections.map((collection) => { %>
          <div class="card">
            <div class="card-header">
              <div class="card-title"><%= collection.name %></div>
            </div>
            <div class="card-content">
              <div class="card-actions">
                <a href="/collections/<%= collection.id %>" class="btn btn-primary">View Collection</a>
                <form action="/collections/delete/<%= collection.id %>" method="GET" style="display: inline;">
                  <button onclick="return confirm('Are you sure you want to delete this collection?');" type="submit" class="btn btn-danger">Delete Collection</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>